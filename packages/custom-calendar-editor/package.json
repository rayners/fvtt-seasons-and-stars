{
  "name": "seasons-and-stars-custom-calendar-editor",
  "version": "0.1.0",
  "description": "Custom calendar creation and editing tools for Seasons & Stars",
  "type": "module",
  "main": "dist/module.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "watch": "rollup -c rollup.config.js -w",
    "typecheck": "tsc --noEmit",
    "test": "cd ../../ && vitest packages/custom-calendar-editor",
    "test:ui": "cd ../../ && vitest --ui packages/custom-calendar-editor",
    "test:run": "cd ../../ && vitest run packages/custom-calendar-editor",
    "test:coverage": "cd ../../ && vitest run --coverage packages/custom-calendar-editor",
    "test:junit": "cd ../../ && vitest run --reporter=junit --reporter=default packages/custom-calendar-editor",
    "prebuild": "echo 'No prebuild step needed for custom-calendar-editor'"
  },
  "devDependencies": {
    "@rayners/foundry-dev-tools": "^1.5.1",
    "@rayners/foundry-test-utils": "^1.1.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jquery": "^3.5.32",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.2",
    "jsdom": "^26.1.0",
    "rollup": "^4.24.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-scss": "^4.0.0",
    "rollup-plugin-serve": "^2.0.2",
    "sass": "^1.89.2",
    "tslib": "^2.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.4",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "author": "David Raynes",
  "license": "MIT"
}
