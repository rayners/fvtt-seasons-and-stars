{
  "name": "seasons-and-stars",
  "version": "0.20.1",
  "description": "A clean calendar and timekeeping module for Foundry VTT v13+",
  "type": "module",
  "calendar-pack": {
    "type": "core",
    "name": "Core Calendars",
    "description": "Built-in calendar collection for Seasons & Stars",
    "tags": [
      "built-in"
    ]
  },
  "main": "dist/module.js",
  "scripts": {
    "prebuild": "node ../../scripts/generate-calendar-list.js core && node ../../scripts/generate-gregorian-defaults.js",
    "build": "rollup -c ../../rollup.config.core.js",
    "watch": "rollup -c ../../rollup.config.core.js -w",
    "typecheck": "tsc --noEmit",
    "test": "cd ../../ && vitest",
    "test:ui": "cd ../../ && vitest --ui",
    "test:run": "cd ../../ && vitest run",
    "test:coverage": "cd ../../ && vitest run --coverage",
    "test:junit": "cd ../../ && vitest run --reporter=junit --reporter=default",
    "test:coverage:junit": "cd ../../ && vitest run --coverage --reporter=junit --reporter=default",
    "prevalidate:calendars": "node ../../scripts/generate-calendar-list.js core",
    "validate:calendars": "tsx scripts/validate-calendars.ts",
    "validate:calendars:syntax": "tsx scripts/validate-calendars-syntax.ts"
  },
  "devDependencies": {
    "@ethaks/fvtt-quench": "^0.10.0",
    "@rayners/foundry-dev-tools": "^1.5.1",
    "@rayners/foundry-test-utils": "^1.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jquery": "^3.5.33",
    "@types/node": "^24.6.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.2",
    "jsdom": "^27.0.0",
    "rollup": "^4.24.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-scss": "^4.0.0",
    "rollup-plugin-serve": "^2.0.2",
    "sass": "^1.93.2",
    "tslib": "^2.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.4",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rayners/fvtt-seasons-and-stars.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/rayners/fvtt-seasons-and-stars/issues"
  },
  "homepage": "https://github.com/rayners/fvtt-seasons-and-stars#readme",
  "author": "David Raynes",
  "license": "MIT"
}
