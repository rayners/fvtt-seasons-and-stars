<div class="moon-phases-container">
  {{#if moonPhases.length}}
    <div class="moon-phases">
      {{#each moonPhases}}
        <div class="moon-phase"
             role="img"
             aria-label="{{this.moonName}}: {{this.phaseName}}"
             data-tooltip="{{this.moonName}}: {{this.phaseName}}"
             data-moon-index="{{this.moonColorIndex}}">
          {{#if this.phaseIconUrl}}
            <img src="{{this.phaseIconUrl}}" width="16" height="16" alt="" class="moon-phase-{{this.phaseIcon}}" />
          {{else}}
            <i class="fas fa-{{this.faIcon}} moon-phase-{{this.phaseIcon}}"></i>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>
