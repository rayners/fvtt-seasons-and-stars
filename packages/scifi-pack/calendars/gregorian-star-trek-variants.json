  "variants": {
    "earth-stardate": {
      "name": "Earth Stardate System",
      "description": "Earth-based stardate calendar for Star Trek campaigns",
      "default": true,
      "config": {
        "yearOffset": 0
      },
      "overrides": {
        "year": {
          "epoch": 0,
          "currentYear": 2370,
          "prefix": "Stardate ",
          "suffix": ""
        },
        "moons": []
      }
    },
