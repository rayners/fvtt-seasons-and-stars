<section class="tab scrollable {{tab.cssClass}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
  <div class="form-group">
    <label>Weekdays</label>
    <div class="form-fields">
      <button type="button" class="button" data-action="addWeekday">
        <i class="fas fa-plus"></i> Add Weekday
      </button>
    </div>
    <p class="hint">Define the days of the week in your calendar</p>
  </div>

  <div class="weekday-list">
    {{#if calendar.weekdays}}
      {{#each calendar.weekdays}}
        <div class="weekday-item" data-index="{{@index}}">
          <div class="weekday-fields">
            <div class="form-group">
              <label for="weekday-name-{{@index}}">Name</label>
              <input type="text" name="weekdays.{{@index}}.name" id="weekday-name-{{@index}}" value="{{this.name}}" placeholder="Monday" />
            </div>
            <div class="form-group">
              <label for="weekday-abbr-{{@index}}">Abbreviation</label>
              <input type="text" name="weekdays.{{@index}}.abbreviation" id="weekday-abbr-{{@index}}" value="{{this.abbreviation}}" placeholder="Mon" />
            </div>
            <div class="weekday-actions">
              <button type="button" class="button danger" data-action="removeWeekday" data-index="{{@index}}" aria-label="Remove weekday" {{#if (eq ../calendar.weekdays.length 1)}}disabled{{/if}}>
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <p class="no-weekdays">No weekdays defined. Click "Add Weekday" to get started.</p>
    {{/if}}
  </div>
</section>
