<section class="tab scrollable {{tab.cssClass}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
  {{!-- Warning banner for non-functional mockup tabs --}}
  <div class="notification warning" style="margin-bottom: 1rem;">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Coming Soon:</strong> This tab is a visual mockup only. Forms do not save or modify calendar data yet. Use the <strong>Editor</strong> tab for functional JSON editing.
  </div>

  <div class="form-group">
    <label>Months</label>
    <div class="form-fields">
      <button type="button" class="button" disabled>
        <i class="fas fa-plus"></i> Add Month
      </button>
    </div>
    <p class="hint">Define the months in your calendar year</p>
  </div>

  <fieldset>
    <legend>Month List (Coming Soon)</legend>
    <p class="hint" style="margin-bottom: 1rem;">Each month will have: Name, Abbreviation, Number of Days, and optional seasonal associations</p>

    <div style="padding: 2rem; text-align: center; color: var(--color-text-dark-secondary); background: var(--color-bg-option); border-radius: 4px; border: 1px dashed var(--color-border-light-tertiary);">
      <i class="fas fa-calendar-alt fa-3x" style="margin-bottom: 1rem; opacity: 0.5;"></i>
      <p style="margin: 0;">Month editor interface coming soon</p>
      <p style="margin: 0.5rem 0 0 0; font-size: 0.9em;">You'll be able to add, edit, and reorder months here</p>
    </div>
  </fieldset>
</section>
