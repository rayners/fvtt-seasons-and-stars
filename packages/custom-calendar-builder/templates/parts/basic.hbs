<section class="tab scrollable {{tab.cssClass}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
  <div class="form-group">
    <label for="calendar-id">Calendar ID</label>
    <div class="form-fields">
      <input type="text" name="id" id="calendar-id" placeholder="my-custom-calendar" value="{{calendar.id}}" />
    </div>
    <p class="hint">Unique identifier (lowercase, no spaces)</p>
  </div>

  <div class="form-group">
    <label for="calendar-name">Calendar Name</label>
    <div class="form-fields">
      <input type="text" name="translations.en.label" id="calendar-name" placeholder="My Custom Calendar" value="{{calendar.translations.en.label}}" />
    </div>
    <p class="hint">Display name for your calendar</p>
  </div>

  <div class="form-group">
    <label for="calendar-description">Description</label>
    <div class="form-fields">
      <textarea name="translations.en.description" id="calendar-description" rows="2" placeholder="A custom calendar for my world">{{calendar.translations.en.description}}</textarea>
    </div>
    <p class="hint">Brief description of your calendar system</p>
  </div>

  <div class="form-group">
    <label for="calendar-setting">Setting/Genre</label>
    <div class="form-fields">
      <input type="text" name="translations.en.setting" id="calendar-setting" placeholder="Generic" value="{{calendar.translations.en.setting}}" />
    </div>
    <p class="hint">The world setting or genre this calendar is designed for</p>
  </div>

  <fieldset>
    <legend>Year Configuration</legend>

    <div class="form-group">
      <label for="year-epoch">Epoch</label>
      <div class="form-fields">
        <input type="number" name="year.epoch" id="year-epoch" value="{{calendar.year.epoch}}" />
      </div>
      <p class="hint">Year zero reference point</p>
    </div>

    <div class="form-group">
      <label for="year-current">Current Year</label>
      <div class="form-fields">
        <input type="number" name="year.currentYear" id="year-current" value="{{calendar.year.currentYear}}" />
      </div>
      <p class="hint">Starting year for your world</p>
    </div>

    <div class="form-group">
      <label for="year-prefix">Year Prefix</label>
      <div class="form-fields">
        <input type="text" name="year.prefix" id="year-prefix" placeholder="Year" value="{{calendar.year.prefix}}" />
      </div>
      <p class="hint">Text to display before the year number (e.g., "Year")</p>
    </div>

    <div class="form-group">
      <label for="year-suffix">Year Suffix</label>
      <div class="form-fields">
        <input type="text" name="year.suffix" id="year-suffix" placeholder="AD" value="{{calendar.year.suffix}}" />
      </div>
      <p class="hint">Text to display after the year number (e.g., "AD", "CE")</p>
    </div>

    <div class="form-group">
      <label for="year-start-day">Starting Weekday</label>
      <div class="form-fields">
        <select name="year.startDay" id="year-start-day">
          {{#if calendar.weekdays}}
            {{#each calendar.weekdays}}
              <option value="{{@index}}" {{#if (eq ../calendar.year.startDay @index)}}selected{{/if}}>{{this.name}}</option>
            {{/each}}
          {{else}}
            <option value="0">No weekdays defined</option>
          {{/if}}
        </select>
      </div>
      <p class="hint">Which day of the week the calendar year begins on</p>
    </div>
  </fieldset>

  <div class="form-group">
    <label for="calendar-sources">Sources</label>
    <div class="form-fields">
      <textarea name="sources" id="calendar-sources" rows="2" placeholder="https://example.com/reference">{{#if calendar.sources}}{{#each calendar.sources}}{{this}}
{{/each}}{{/if}}</textarea>
    </div>
    <p class="hint">Reference URLs (one per line)</p>
  </div>
</section>
