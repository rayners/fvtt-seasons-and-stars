{
  "permissions": {
    "allow": [
      "Bash(npm install)",
      "Bash(npm run:*)",
      "WebFetch(domain:foundryvtt.com)",
      "WebFetch(domain:foundryvtt.wiki)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/setup-dev-context.sh"
          }
        ]
      }
    ]
  }
}
