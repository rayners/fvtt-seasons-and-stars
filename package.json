{
  "name": "seasons-and-stars-monorepo",
  "version": "0.7.0",
  "description": "Seasons & Stars module collection: core module with fantasy and sci-fi calendar packs",
  "type": "module",
  "private": true,
  "scripts": {
    "prebuild": "npm run prebuild:core && npm run prebuild:fantasy && npm run prebuild:scifi",
    "prebuild:core": "node packages/core/scripts/generate-calendar-list.js",
    "prebuild:fantasy": "node packages/fantasy-pack/scripts/generate-calendar-list.js",
    "prebuild:scifi": "node packages/scifi-pack/scripts/generate-calendar-list.js",
    "build": "npm run build:core && npm run build:fantasy && npm run build:scifi",
    "build:core": "rollup -c rollup.config.core.js",
    "build:fantasy": "npm run copy:fantasy", 
    "build:scifi": "npm run copy:scifi",
    "copy:fantasy": "mkdir -p dist/fantasy-pack && cp packages/fantasy-pack/module.json dist/fantasy-pack/ && cp -r packages/fantasy-pack/calendars dist/fantasy-pack/",
    "copy:scifi": "mkdir -p dist/scifi-pack && cp packages/scifi-pack/module.json dist/scifi-pack/ && cp -r packages/scifi-pack/calendars dist/scifi-pack/",
    "watch": "npm run watch:core",
    "watch:core": "rollup -c rollup.config.core.js -w",
    "typecheck": "npm run prebuild && tsc --noEmit",
    "lint": "eslint packages/core/src",
    "lint:fix": "eslint packages/core/src --fix",
    "format": "prettier --write \"packages/**/*.{ts,js,json}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,js,json}\" \"*.{js,json,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:junit": "vitest run --reporter=default --reporter=junit --outputFile=test-report.junit.xml",
    "test:coverage:junit": "vitest run --coverage --reporter=default --reporter=junit --outputFile=test-report.junit.xml",
    "validate:calendars": "npm run validate:calendars:core && npm run validate:calendars:fantasy && npm run validate:calendars:scifi",
    "validate:calendars:core": "tsx packages/core/scripts/validate-calendars.ts",
    "validate:calendars:fantasy": "tsx packages/fantasy-pack/scripts/validate-calendars.js",
    "validate:calendars:scifi": "tsx packages/scifi-pack/scripts/validate-calendars.js",
    "validate": "npm run lint && npm run format:check && npm run typecheck && npm run test:run && npm run validate:calendars && npm run build",
    "prepare": "husky",
    "link-electron": "node ../foundry-dev-tools/scripts/link-module.js ~/Library/Application\\ Support/FoundryVTT/Data/modules",
    "link-node": "node ../foundry-dev-tools/scripts/link-module.js ~/foundry-versions/13.344-data/modules",
    "link-copy": "node ../foundry-dev-tools/scripts/link-module.js --copy"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "author": "David Raynes",
  "license": "MIT",
  "devDependencies": {
    "@ethaks/fvtt-quench": "^0.10.0",
    "@rayners/foundry-dev-tools": "^1.5.1",
    "@rayners/foundry-test-utils": "^1.1.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jquery": "^3.5.32",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.2",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "rollup": "^4.24.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-scss": "^4.0.0",
    "rollup-plugin-serve": "^2.0.2",
    "sass": "^1.89.2",
    "tslib": "^2.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.4",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  }
}
