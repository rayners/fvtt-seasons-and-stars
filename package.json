{
  "name": "seasons-and-stars",
  "version": "0.1.0",
  "description": "A clean calendar and timekeeping module for Foundry VTT v13+",
  "type": "module",
  "main": "dist/module.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"test/**/*.{ts,js}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"test/**/*.{ts,js}\" \"*.{js,json,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "validate": "npm run lint && npm run format:check && npm run typecheck && npm run test:run && npm run build",
    "prepare": "npm run build"
  },
  "author": "David Raynes",
  "license": "MIT",
  "devDependencies": {
    "@ethaks/fvtt-quench": "^0.10.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jquery": "^3.5.32",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "rollup": "^3.20.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-scss": "^4.0.0",
    "rollup-plugin-serve": "^2.0.2",
    "sass": "^1.62.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4",
    "vitest": "^3.1.4"
  }
}
