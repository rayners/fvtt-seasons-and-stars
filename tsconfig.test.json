{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node", "jquery"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020"
  },
  "include": ["packages/*/test/**/*", "packages/core/src/**/*"],
  "exclude": ["node_modules"]
}
